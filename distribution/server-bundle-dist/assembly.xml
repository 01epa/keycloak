<assembly>
    <id>server-bundle-dist</id>

    <formats>
        <format>zip</format>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.keycloak:keycloak-server-dist:zip</include>
            </includes>
            <outputDirectory></outputDirectory>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.keycloak:keycloak-examples-dist:zip</include>
            </includes>
            <outputDirectory></outputDirectory>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.keycloak:keycloak-docs-dist:zip</include>
            </includes>
            <outputDirectory></outputDirectory>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
</assembly>
